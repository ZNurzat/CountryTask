<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    app:cardCornerRadius="8dp"
    android:layout_margin="8dp"
    android:layout_height="wrap_content">
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/bgImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignBottom="@id/title_layout"
                android:layout_alignStart="@id/title_layout"
                android:layout_alignEnd="@id/title_layout"
                android:layout_alignTop="@id/title_layout"
                android:scaleType="centerCrop"
                android:src="@drawable/bgdf"/>

            <View
                android:id="@+id/bgImageAboveColor"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignBottom="@id/title_layout"
                android:layout_alignStart="@id/title_layout"
                android:layout_alignEnd="@id/title_layout"
                android:layout_alignTop="@id/title_layout"
                android:scaleType="centerCrop"/>


            <RelativeLayout
                android:id="@+id/title_layout"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/title"
                    android:layout_marginEnd="@dimen/margin_12"
                    android:paddingBottom="@dimen/margin_32"
                    android:paddingStart="@dimen/margin_12"
                    android:paddingTop="@dimen/margin_12"
                    android:paddingEnd="@dimen/margin_12"
                    android:textSize="@dimen/text_20"
                    android:textColor="@android:color/white"
                    android:text="Kazakhstan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:gravity="center_vertical"
                    android:id="@+id/time"
                    android:textColor="@android:color/white"
                    android:layout_below="@id/title"
                    android:padding="@dimen/margin_12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>
            <LinearLayout
                android:layout_below="@id/title_layout"
                android:id="@+id/desc_layout"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/countryId"
                    android:layout_marginEnd="@dimen/margin_40"
                    android:layout_marginTop="@dimen/margin_8"
                    android:layout_marginBottom="@dimen/margin_12"
                    android:layout_marginStart="@dimen/margin_12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </RelativeLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</androidx.cardview.widget.CardView>